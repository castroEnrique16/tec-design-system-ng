{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ds-ng",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "styles/main.css",
      "input": "src/assets/styles",
      "output": "./styles"
    },
    {
      "glob": "**/*.ttf", 
      "input": "src/assets/fonts",
      "output": "./fonts"
    }
  ]
}
